<ResourceDictionary x:Class="EveMarket.Views.DataTemplates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EveMarket"
             xmlns:i="clr-namespace:Cauldron.XAML.Interactivity;assembly=Cauldron.XAML.Interactivity"
             xmlns:a="clr-namespace:Cauldron.XAML.Interactivity.Attached;assembly=Cauldron.XAML.Interactivity"
             xmlns:controls="clr-namespace:Cauldron.XAML.Controls;assembly=Cauldron.XAML">

    <DataTemplate x:Key="View_App">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <ProgressBar IsIndeterminate="True" Height="24" Width="200" HorizontalAlignment="Center" Margin="10" />
            <TextBlock a:Localized.Text="loading" HorizontalAlignment="Center" FontWeight="Thin" FontSize="18" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>